// STUDENT COURSE MANAGEMNT SYSTEM


import java.util.*;

// ABSTRACT CLASS (ABSTRACTION) 
abstract class Person {
    protected String name;
    protected int age;

    public Person(String name, int age) {
        this.name = name;
        this.age = age;
    }

    abstract void displayDetails(); // Abstract method â†’ Abstraction
}

// STUDENT CLASS (INHERITANCE + ENCAPSULATION)
class Student extends Person {
    private String studentId;
    private ArrayList<Course> courses = new ArrayList<>(); // COLLECTION

    public Student(String name, int age, String studentId) {
        super(name, age);
        this.studentId = studentId;
    }

    public void enrollCourse(Course c) {
        courses.add(c);
    }

    public ArrayList<Course> getCourses() {
        return courses;
    }

    @Override
    void displayDetails() {  // POLYMORPHISM
        System.out.println("\n--- Student Details ---");
        System.out.println("ID : " + studentId);
        System.out.println("Name : " + name);
        System.out.println("Age : " + age);
        System.out.println("Courses Enrolled :");

        if (courses.isEmpty()) {
            System.out.println("No courses enrolled.");
        } else {
            for (Course c : courses) {
                System.out.println(" - " + c.getCourseName());
            }
        }
    }
}

// COURSE CLASS 
class Course {
    private String courseId;
    private String courseName;

    public Course(String cid, String cname) {
        this.courseId = cid;
        this.courseName = cname;
    }

    public String getCourseName() {
        return courseName;
    }
}

// CUSTOM EXCEPTION 
class InvalidInputException extends Exception {
    public InvalidInputException(String msg) {
        super(msg);
    }
}

//  MAIN SYSTEM CLASS
public class StudentManagementSystem {
    static Scanner sc = new Scanner(System.in);

    // COLLECTIONS
    static HashMap<String, Student> students = new HashMap<>();
    static HashMap<String, Course> courses = new HashMap<>();

    public static void main(String[] args) {

        int choice;

        do {
            System.out.println("\nSTUDENT COURSE MANAGEMENT SYSTEM ");
            System.out.println("1. Add Student");
            System.out.println("2. Add Course");
            System.out.println("3. Enroll Student in Course");
            System.out.println("4. Display Student Details");
            System.out.println("5. Exit");
            System.out.print("Enter choice: ");

            choice = sc.nextInt();

            switch (choice) {
                case 1 -> addStudent();
                case 2 -> addCourse();
                case 3 -> enrollStudent();
                case 4 -> displayStudent();
                case 5 -> System.out.println("Exiting...");
                default -> System.out.println("Invalid choice! Try again.");
            }

        } while (choice != 5);
    }

    //  ADD STUDENT
    static void addStudent() {
        try {
            System.out.print("Enter Name: ");
            String name = sc.next();

            System.out.print("Enter Age: ");
            int age = sc.nextInt();
            if (age <= 0) {
                throw new InvalidInputException("Age must be positive!");
            }

            System.out.print("Enter Student ID: ");
            String sid = sc.next();

            students.put(sid, new Student(name, age, sid));
            System.out.println("Student added successfully!");

        } catch (InvalidInputException e) {
            System.out.println("Error: " + e.getMessage());
        }
    }

    //  ADD COURSE
    static void addCourse() {
        System.out.print("Enter Course ID: ");
        String cid = sc.next();

        System.out.print("Enter Course Name: ");
        String cname = sc.next();

        courses.put(cid, new Course(cid, cname));
        System.out.println("Course added successfully!");
    }

    //  ENROLL STUDENT 
    static void enrollStudent() {
        System.out.print("Enter Student ID: ");
        String sid = sc.next();

        System.out.print("Enter Course ID: ");
        String cid = sc.next();

        if (!students.containsKey(sid)) {
            System.out.println("Student not found!");
            return;
        }

        if (!courses.containsKey(cid)) {
            System.out.println("Course not found!");
            return;
        }

        Student s = students.get(sid);
        Course c = courses.get(cid);

        s.enrollCourse(c);
        System.out.println("Course enrolled successfully!");
    }

    // DISPLAY STUDENT DETAILS 
    static void displayStudent() {
        System.out.print("Enter Student ID: ");
        String sid = sc.next();

        if (students.containsKey(sid)) {
            students.get(sid).displayDetails();
        } else {
            System.out.println("Student not found!");
        }
    }
}
